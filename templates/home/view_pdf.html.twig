{# templates/home/view_pdf.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}View PDF - {{ filename }}{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>PDF Viewer: {{ filename }}</h1>
    
    <div class="pdf-container">
        <embed 
            src="{{ asset('uploads/pdf/' ~ filename) }}" 
            type="application/pdf" 
            width="100%" 
            height="600px"
        >
    </div>
    
    <div class="mt-3">
        <a href="{{ path('app_pdf_options', {'filename': filename}) }}" class="btn btn-primary">
            PDF Options
        </a>
        <a href="{{ path('app_extract_text', {'filename': filename}) }}" class="btn btn-success">
            Extract Text
        </a>
        <a href="{{ path('app_download_pdf', {'filename': filename}) }}" class="btn btn-secondary">
            Download PDF
        </a>
        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
            Upload Another PDF
        </a>
    </div>
</div>
{% endblock %}